<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500" prefWidth="800" styleClass="background-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="test.textboxes.Controller">

    <!-- Логин-панель -->
    <VBox fx:id="loginPane" alignment="CENTER" layoutX="326.0" layoutY="189.0" spacing="10" styleClass="background-pane">
        <TextField fx:id="usernameField" promptText="Логин" styleClass="login-username-field" />
        <PasswordField fx:id="passwordField" promptText="Пароль" styleClass="login-password-field" />
        <Button onAction="#handleLogin" text="Войти" styleClass="login-button" />
        <Label fx:id="loginError" textFill="red" />
    </VBox>

    <!-- Основной контент -->
    <AnchorPane fx:id="mainPane" visible="false" styleClass="main-content-background-pane">
        <AnchorPane prefHeight="100.0" prefWidth="800.0" styleClass="top-border-pane" />
        <AnchorPane prefHeight="500.0" prefWidth="100.0" styleClass="left-border-pane" />
        <VBox layoutX="300.0" layoutY="200.0" prefHeight="200.0" prefWidth="300.0" alignment="CENTER" spacing="20">
            <children>
                <Label fx:id="welcomeText" prefHeight="20.0" prefWidth="300.0" alignment="CENTER" styleClass="text-lable" />
                <TextField fx:id="inputField" promptText="Введите цыфру..." styleClass="massage-field" stylesheets="@style.css" />
                <Button onAction="#onHelloButtonClick" styleClass="transparent-rounded-button" text="do something" />
            </children>
        </VBox>
    </AnchorPane>

</AnchorPane>
